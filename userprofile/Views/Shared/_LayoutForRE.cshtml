<body class="layout-top-nav skin-green">
    <div class="wrapper">
        <header class="main-header">
            <div class="navbar navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
                    <i class="fa fa-bars"></i>
                </button>
                @Html.ActionLink("RefereeAO", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
         
            <div class="collapse navbar-collapse pull-left" id="navbar-collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Match list", "Index", "match")</li>
                    <li>@Html.ActionLink("Team list", "Index", "team")</li>
                    <li>@Html.ActionLink("Special availability", "Index", "OneOffAVAILABILITies")</li>
                    <li>@Html.ActionLink("My availability", "Availability", "REFEREE")</li>
                    <li>@Html.ActionLink("My details", "Details", "Account")</li>
                   
                </ul>
               
            </div><!-- /.navbar-collapse -->

            <div class="navbar-custom-menu">
                <ul class="nav navbar-nav">
                    <li class="dropdown user user-menu">
                        <a href=" #" class="dropdown-toggle" data-toggle="dropdown">
                        @Html.Action("showProfile", "Account", new { id = User.Identity.GetUserName()})
                       Hello @User.Identity.GetUserName()
                        </a>


                        <ul class="dropdown-menu">

                            @Html.Partial("_LoginPartial")

                        </ul>
                    </li>
                    </ul>
</div>
        </div>
    </div>
