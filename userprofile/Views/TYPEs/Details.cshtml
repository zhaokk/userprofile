    <div class="col-md-12">
        <div class="box">
            <div class="box-body">

                @Html.ActionLink("Edit", "Edit", new { id = Model.name }, new { @class = "btn btn-warning pull-right" })
               
                <hr />

                <dl class="dl-horizontal">

                    <dt>
                        Description:
                        @*@Html.DisplayNameFor(model => model.description)*@
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.description)
                    </dd>

                    <dt>
                        Priority:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.priority)
                    </dd>

                    <dt>
                        Status:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.status)
                    </dd>

                </dl>
            </div>
          </div>
        </div>
    </div>

