@using userprofile.Models;
@model Tuple<REFEREE, List<OFFER>>
@{

}

<div class="row">
    <div class="col-xs-12">
        <div class="box">

            <div class="box-body">
                @Html.ActionLink("Edit", "Edit", new { id = Model.Item1.refId }, new { @class = "btn btn-warning pull-right" })
                
                <div>
                    <h4>Referee Details</h4>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            <b>Name</b>

                        </dt>
							<dd>
								<a href="@Url.Action("Details", "Account", new { id = Model.Item1.AspNetUser.UserName})">
									@Html.DisplayFor(model => model.Item1.AspNetUser.firstName)
									@Html.DisplayFor(model => model.Item1.AspNetUser.lastName)
									(@Html.DisplayFor(model => model.Item1.AspNetUser.UserName))
								</a>
							</dd>
                        <dt>
                            <b>Phone number</b>

                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Item1.AspNetUser.phoneNum)
                        </dd>
                        <dt>
                            <b>Email</b>

                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Item1.AspNetUser.email)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Item1.distTravel)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Item1.distTravel)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Item1.rating)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Item1.rating)
                        </dd>
                    </dl>
                </div>

                <div class="table-responsive">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Match Date</th>


                                <th>

                                    Tournament

                                </th>
                                <th>
                                    Referee Type
                                </th>
                                <th>
                                    Status
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Item2)
                            {
                                <tr>
                                    <td>
                                        <a href="@Url.Action( "Details","match", new { id = item.matchId })">
                                            @item.MATCH.matchDate
                                        </a>
                                    </td>
                                    <td>
                                        @item.MATCH.TOURNAMENT.name
                                    </td>
                                    <td>
                                        @item.typeOfOffer
                                    </td>
                                    <td>
                                        @switch (@item.status) {
											case 1:
												@:Accepted
												break;
											case 2:
												@:Declined
												break;
											case 3:
												@:Pending
												break;
											case 4:
												@:Unassigned
												break;
											case 5:
												@:Smart Assign
												break;
											default:
												@:ERROR
												break;
										}
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>



            </div>
        </div>
    </div>
</div>