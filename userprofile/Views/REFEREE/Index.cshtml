                            counter++;
                        }
                    </tbody>
                </table>
                </div>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div><!-- /.col -->
    <div class="col-md-3">
        <div class="btn-group">
            <a class=" btn btn-block btn-success" href='@Url.Action("Create","REFEREE")'><b>Add a new referee</b></a>
