

@{
    ViewBag.Title = "Referee Management";
}
@using userprofile.Models;
@model Tuple<List<REFEREE>, List<SelectList>>















<script type="text/javascript">
    $(function () {
        $("#example1").DataTable();
        $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": true,
            "autoWidth": false
        });
    });
</script>




<div class="row">

    <div class="col-xs-12">
        <div class="box">
           
            <div class="box-body">
                <div class="table-responsive">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>User name</th>
                                <th>
                                    <span style="cursor:help;" title="Distance willing to travel">Willing</span>
                                    
                                </th>

                                <th>

                                    Qualifications

                                </th>
                                <th>
                                    Sport
                                </th>
                                <th>

                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ var counter = 0;}
                            @foreach (var item in Model.Item1)
                        {
                        <tr>
                            <td>
                                <a href="@Url.Action("Details", new { id = item.refId })">
                                    @item.AspNetUser.UserName
                                </a>
                            </td>
                            <td>
                                @item.distTravel
                            </td>

                            <td>

                                <a href="@Url.Action("changequal",new {id=item.refId})">
                                    Change Qualification
                                </a>
                                @foreach (var temp in item.USERQUALs)
                                {
                                    <div>@temp.QUALIFICATION.name</div>
                                }
                                @*@Html.ListBox("Id", new SelectList(item.QUALIFICATIONS, "qID", "name"))*@
                            </td>
                            <td>
                                @item.SPORT1.name
                            </td>
                            <td>
                                @Html.ActionLink("Delete", "Delete", new { id = item.refId }, new { @class = "btn btn-danger pull-right" })
                                @Html.ActionLink("Edit", "Edit", new { id = item.refId }, new { @class = "btn btn-warning pull-right" })
                            </td>
                        </tr>
                            counter++;
                        }
                        </tbody>
                    </table>
                </div>
                </div><!-- /.box-body -->
        </div><!-- /.box -->
        <div class="col-md-3">
            <div class="btn-group">
                <a class=" btn btn-block btn-success" href='@Url.Action("Create","REFEREE")'><b>Add a new referee</b></a>
                
            </div>
        </div>
    </div><!-- /.col -->
    
</div><!-- /.row -->