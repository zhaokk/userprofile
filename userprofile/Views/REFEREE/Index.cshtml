

@{
    ViewBag.Title = "Referee Management";
}
@using userprofile.Models;
@model Tuple<List<REFEREE>, List<SelectList>>














<script src="/Scripts/AdminLTE/plugins/datatables/jquery.dataTables.js" type="text/javascript"></script>
