                                main sport
                            </th>
                            <th>

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ var counter = 0;}
                        @foreach (var item in Model.Item1)
                        {
                            <tr>
                            @*<td>
                                   
                                    <a href="@Url.Action("Details", new { id = item.refID })">
