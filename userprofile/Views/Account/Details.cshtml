@using userprofile.Models
@using Microsoft.AspNet.Identity
@model Tuple<AspNetUser, List<PLAYER>>


<script type="text/javascript">
    $(function () {
        $("#example1").DataTable();
        $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": true,
            "autoWidth": false
        });
    });
</script>


<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-body">
                <hr />
                @{
                    if (User.Identity.Name == Model.Item1.UserName)
                    
                    {
                        
                     @Html.ActionLink("Edit my details", "SelfEdit", "Account", new { @class = "btn btn-success pull-right" })
                     @Html.ActionLink("Change password", "Manage", "Account", new { id = User.Identity.GetUserName() }, new { @class = "btn btn-warning pull-right" })
                    }
                    else if (User.IsInRole("Admin"))
                    {

                     @Html.ActionLink("Change password", "Manage", "Account", new { id = User.Identity.GetUserName() }, new { @class = "btn btn-warning pull-right" })
                    @Html.ActionLink("Edit", "Edit", new { id = Model.Item1.UserName }, new { @class = "btn btn-info pull-right" })
                    <div class="fa fa-angle-left">
                        @Html.ActionLink(" Back to users", "Index")
                    </div>
                    }
}
                
              
               
                <div class="row">
                    <div class="col-lg-6">
                        <dl class="dl-horizontal">
                            @if (User.IsInRole("Admin"))
                            {
                                <dt>
                                    <span class="glyphicon glyphicon-user" aria-hidden="true"></span>   UserRole
                                </dt>
                                <dd>
                                   <span class="label label-success">Admin</span>
                                </dd>
                            }
                            else if (User.IsInRole("Referee"))
                            {


                            }
                            <dt>
                                @Html.DisplayNameFor(model => model.Item1.UserName)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Item1.UserName)

                            </dd>

                            <dt>
                                <b>Name </b>
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Item1.firstName) @Html.DisplayFor(model => model.Item1.lastName)
                            </dd>

                            <dt>
                                <b>ffa# if applicable</b>
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Item1.ffaNum)

                            </dd>

                            @{
                                if (Model.Item1.willingToshowEmail || User.IsInRole("Admin"))
                                {
                                    <dt>
                                        @Html.DisplayNameFor(model => model.Item1.email)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.Item1.email)
                                    </dd>
                                }
                            }

                            @{
                                if (Model.Item1.willingToShowPhoneNum || User.IsInRole("Admin"))
                                {
                                    <dt>
                                        @Html.DisplayNameFor(model => model.Item1.phoneNum)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.Item1.phoneNum)
                                    </dd>
                                }
                            }

                            @{
                                if (Model.Item1.willingToShowDOB || User.IsInRole("Admin"))
                                {
                                    <dt>
                                        @Html.DisplayFor(model => model.Item1.dob)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.Item1.dob)
                                    </dd>
                                }
                            }

              

                        </dl>
                    </div>
                        <div class="col-lg-6">
                       
                        </div>


                        
                    </div>
            </div>
        </div>


        @if (Model.Item2.Count > 0)
        { //if there is no team data, don't display the table

        <div class="box">
            <div class="box-body">
                <div class="table-responsive">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Team Name</th>
                                <th>Position</th>
                                <th>Shirt Number</th>
                            </tr>
                        </thead>
                        <tbody>
                           @{foreach (var item in Model.Item2)
                            {

                                        <tr>
                                            <td>
                                                <a href="@Url.Action("Details", "team", new { id = item.teamId })">
                                                    @item.TEAM.name
                                                </a>

                                            </td>
                                            <td>
                                                @item.position
                                            </td>
                                            <td>
                                                @item.shirtNum
                                            </td>
                                        </tr>
                                    }
                                
                               
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>    
        }

    </div>
</div>