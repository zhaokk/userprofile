                                    @Html.ValidationMessageFor(model => model.createdMatch.tournamentId)
                                </div>
                               
                            </div>
                        <div class="form-group" id="ql2" hidden>
                            @Html.LabelFor(model => model.ql2, "Offer 2 Qualification Level", new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.ql2)
                                @Html.ValidationMessageFor(model => model.ql2)
                            </div>

                        </div>

						<div class="form-group" id="t3" hidden>
							@Html.LabelFor(model => model.q3, "Offer 3 Type", new { @class = "control-label col-md-2" })
							<div class="col-md-10">
								@Html.DropDownList("types", (SelectList)ViewBag.types, String.Empty, new { @Name = "type3" })
								@Html.ValidationMessageFor(model => model.type3)
							</div>
						</div>
                            <div class="form-group" id="q3" hidden>
                                @Html.LabelFor(model => model.q3, "Offer 3 Qualification", new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("qualification", (SelectList)ViewBag.qualification, String.Empty, new { @Name = "q3" })
                                    @Html.ValidationMessageFor(model => model.createdMatch.tournamentId)
                                </div>
                              
                            </div>
                        <div class="form-group" id="ql3" hidden>
                            @Html.LabelFor(model => model.ql3, "Offer 3 Qualification Level", new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.ql3)
                                @Html.ValidationMessageFor(model => model.ql3)
                            </div>

                        </div>
                        

                            <div class="form-group">
                                <div class="col-md-offset-2 col-sm-1">
                                    <input type="submit" value="Create" id="newoffers" class="btn btn-success" />
                                </div>
                            </div>
                            <div id="offers">
