								<div class="col-md-10">
									@Html.DropDownList("qualification", (SelectList)ViewBag.qualification, String.Empty, new { @Name = "q1" })
									@Html.ValidationMessageFor(model => model.createdMatch.tournamentId)
								</div>
							</div>
						<div class="form-group" id="ql1" hidden>
