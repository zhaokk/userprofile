                        </div>
                        
                        
						<div class="form-group" id="t1" hidden>
							@Html.LabelFor(model => model.q1, "Offer 1 Type", new { @class = "control-label col-md-2" })
							<div class="col-md-10">
								@Html.DropDownList("types", (SelectList)ViewBag.types, String.Empty, new { @Name = "type1" })
