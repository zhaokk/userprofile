@model IEnumerable<userprofile.Models.SPORT>

@{
    ViewBag.Title = "Sport Page";
}

<script type="text/javascript">
    $(function () {
        $("#example1").DataTable();
        $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": true,
            "autoWidth": false
        });
    });
</script>




<div class="row">

    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
            </div><!-- /.box-header -->
            <div class="box-body">

                <table id="example2" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.name)
                               
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.status)
                            </th>
                            <th>

                               
                            </th>
                        </tr></thead>
                   
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>
                                    <a href="@Url.Action("Details", new { id = item.name})">
                                       @Html.DisplayFor(modelItem => item.name)
                                    </a>

                                   
                                    
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.status)
                                </td>
                                <td>
                                    @Html.ActionLink("Delete", "Delete", new { id = item.name }, new { @class = "btn btn-danger pull-right" })
                                    @Html.ActionLink("Edit", "Edit", new { id = item.name }, new { @class = "btn btn-warning pull-right" })
                              
                                   
                                </td>
                            </tr>
                        }
                    </tbody>
                   

                </table>
</div>
</div>
        <div class="btn-group">
            <a class=" btn btn-block btn-success" href='@Url.Action("Create", "SPORTs")'><b>Create New Sport</b></a>
        </div>
</div>
</div>
