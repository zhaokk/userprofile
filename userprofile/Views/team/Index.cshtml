@model IEnumerable<userprofile.Models.TEAM>

@{
    ViewBag.Title = "Team Management";
    
}

<script src="/Scripts/AdminLTE/plugins/datatables/jquery.dataTables.js" type="text/javascript"></script>
<script src="/Scripts/AdminLTE/plugins/datatables/dataTables.bootstrap.js" type="text/javascript"></script>
<script src="/Scripts/AdminLTE/plugins/datatables/dataTables.bootstrap.min.js" type="text/javascript"></script>
<link href="/Scripts/AdminLTE/plugins/datatables/jquery.dataTables.css" rel="stylesheet" type="text/css">
<link href="/Scripts/AdminLTE/plugins/datatables/dataTables.bootstrap.css" rel="stylesheet" type="text/css">
<link href="/Scripts/AdminLTE/plugins/datatables/jquery.dataTables_themeroller.css" rel="stylesheet" type="text/css">
<script type="text/javascript">
    $(function () {
        $("#example1").DataTable();
        $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": true,
            "autoWidth": false
        });
    });
</script>
<div class="row">
    
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
            </div><!-- /.box-header -->
            <div class="box-body">
                <table id="example2" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ageBracket)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.grade)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AspNetUser.UserName)
                            </th>

                            <th>

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                   
                                    <a href="@Url.Action("Details", new { id = item.teamID })">
                                        @Html.DisplayFor(modelItem => item.name)
                                    </a>
                                    @*@Html.ActionLink("Details", "Details", new { id = item.mID })*@


                                </td>
                                @*<td>
                                    @Html.DisplayFor(modelItem => item.winnerID)
                                </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.ageBracket)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.grade)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AspNetUser.UserName)
                                </td>
                              
                                <td>
                                    @Html.ActionLink("Delete", "Delete", new { id = item.teamID }, new { @class = "btn btn-danger pull-right" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->

    </div><!-- /.col -->
    <div class="col-md-3">

        <div class="btn-group">
            <a class=" btn btn-block btn-success" href='@Url.Action("Create", "team")'><b>Create New Team</b></a>
        </div>
    </div>
</div><!-- /.row -->