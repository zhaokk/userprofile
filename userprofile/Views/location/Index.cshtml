@model IEnumerable<userprofile.Models.LOCATION>

@{
    ViewBag.Title = "Location";
}


<script type="text/javascript">
    $(function () {
        $("#example1").DataTable();
        $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": true,
            "autoWidth": false
        });
    });
</script>



<div class="row">

    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
            </div><!-- /.box-header -->
            <div class="box-body">
                <div class="table-responsive">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.name)
                                </th>
                                @*<th>
                            @Html.DisplayNameFor(model => model.matchDate)
                        </th>*@
                                @*<th>
                            @Html.DisplayNameFor(model => model.winnerID)
                        </th>*@
                                <th>
                                    @*@Html.DisplayNameFor(model => model.price)*@
                                    Price
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.street)
                                </th>
                                @*<th>
                            @Html.DisplayNameFor(model => model.snum)
                        </th>*@
                                <th>
                                    @Html.DisplayNameFor(model => model.city)
                                </th>
                                <th>
                                    @*@Html.DisplayNameFor(model => model.postcode)*@
                                    Postcode
                                </th>
                                <th>
                                    @*@Html.DisplayNameFor(model => model.phoneNum)*@
                                    Phone Number
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.state)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                        {
                        <tr>
                            <td>

                                <a href="@Url.Action("Details", new { id = item.lID })">
                                    @Html.DisplayFor(modelItem => item.name)
                                </a>
                                @*@Html.ActionLink("Details", "Details", new { id = item.mID })*@

                            </td>
                            @*<td>
                        @Html.DisplayFor(modelItem => item.winnerID)
                    </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.street)
                            </td>
                            @*<td>
                        @Html.DisplayFor(modelItem => item.snum)
                    </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.city)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.postcode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.phoneNum)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.state)
                            </td>
                            <td>
                                @Html.ActionLink("Delete", "Delete", new { id = item.lID }, new { @class = "btn btn-danger pull-right" })
                            </td>
                        </tr>
                        }
                        </tbody>
                    </table>
                </div>
                </div><!-- /.box-body -->
        </div><!-- /.box -->

    </div><!-- /.col -->
    <div class="col-md-3">

        <div class="btn-group">
            <a class=" btn btn-block btn-success" href='@Url.Action("Create", "location")'><b>Create New Location</b></a>
        </div>
    </div>
</div><!-- /.row -->
