@model IEnumerable<userprofile.Models.OneOffAVAILABILITY>
@{
    ViewBag.Title = "Index";
}
<script type="text/javascript">
    $(function () {
        $("#example1").DataTable();
        $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": true,
