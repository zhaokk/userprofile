                                    <td>
                                        @Html.DisplayFor(modelItem => item.timeOnOrOff)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.REFEREE.sport)
